<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="France24"
            android:id="@+id/ktnbtn"
            android:onClick="France24"
            android:layout_margin="2dp"
            android:layout_width="wrap_content" />

        <Button
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="K24 Live"
            android:onClick="K24"
            android:id="@+id/cnnbtn"
            android:layout_weight="1.0"/>

        <Button
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Aljazeera"
            android:onClick="Aljazeera"
            android:id="@+id/aljazeeratv"
            android:layout_weight="1.0"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="Fox News"
            android:id="@+id/foxbtn"
            android:onClick="Fox"
            android:layout_margin="2dp"
            android:layout_width="wrap_content" />

        <Button
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="CNN"
            android:onClick="CNN"
            android:id="@+id/bbcbtn"
            android:layout_weight="1.0"/>

        <Button
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="DW"
            android:onClick="DW"
            android:id="@+id/citizen"
            android:layout_weight="1.0"/>

    </LinearLayout>

</LinearLayout>